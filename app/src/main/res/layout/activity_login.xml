<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image_login_bg">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/icon_logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView

        android:id="@+id/tv_ip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_soft_input"
        android:gravity="center"
        android:text="设置IP地址"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        />

    <ImageView
        android:id="@+id/iv_login_portrait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="118dp"
        android:src="@drawable/image_login_pic"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_user_account"
        android:layout_width="470dp"
        android:layout_height="54dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_login_input"
        android:gravity="center_vertical"
        android:hint="请输入账号"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:singleLine="true"
        android:textColor="@color/color_666"
        android:textColorHint="@color/color_999"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_login_portrait" />

    <EditText
        android:id="@+id/edit_user_psw"
        android:layout_width="470dp"
        android:layout_height="54dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/shape_login_input"
        android:gravity="center_vertical"
        android:hint="请输入密码"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:singleLine="true"
        android:textColor="@color/color_666"
        android:textColorHint="@color/color_999"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@+id/edit_user_account"
        app:layout_constraintTop_toBottomOf="@+id/edit_user_account" />



    <Button
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_user_psw"
        android:id="@+id/btn_login_user"
        android:text="登录"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:background="@drawable/login_button"
        android:gravity="center"
        android:layout_width="300dp"
        android:layout_height="60dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>