<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="3dp">

    <ImageView
        android:id="@+id/itemiv_pay_mode_bg_layout"
        android:layout_width="390dp"
        android:layout_height="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/item_iv_pay_mode_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:src="@drawable/icon_cash"
        app:layout_constraintLeft_toLeftOf="@+id/itemiv_pay_mode_bg_layout"
        app:layout_constraintRight_toRightOf="@+id/itemiv_pay_mode_bg_layout"
        app:layout_constraintTop_toTopOf="@+id/itemiv_pay_mode_bg_layout" />

    <TextView
        android:id="@+id/item_tv_pay_mode_name"
        android:layout_width="36dp"
        android:layout_height="25dp"
        android:text="现金"
        android:textColor="#ff333333"
        app:layout_constraintLeft_toLeftOf="@+id/itemiv_pay_mode_bg_layout"
        app:layout_constraintRight_toRightOf="@+id/itemiv_pay_mode_bg_layout"
        app:layout_constraintBottom_toBottomOf="@+id/itemiv_pay_mode_bg_layout"
        android:layout_marginBottom="11dp"
        android:textSize="18sp"
        />
</android.support.constraint.ConstraintLayout>