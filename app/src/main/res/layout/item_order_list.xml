<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_order_list_bg"
    android:layout_width="match_parent"
    android:paddingRight="12dp"
    android:layout_height="66dp"
    android:paddingLeft="12dp">

    <TextView
        android:id="@+id/item_tv_pay_date"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="2019-08-18 13:40"
        android:textColor="#ff686e75"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/item_tv_mpde_tag"
        android:layout_width="56dp"
        android:layout_height="24dp"
        android:layout_marginLeft="65dp"
        android:background="@drawable/item_list_cash"
        android:gravity="center"
        android:text="现金"
        android:textColor="#fff99100"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/item_tv_pay_date"
        app:layout_constraintLeft_toRightOf="@+id/item_tv_pay_date"
        app:layout_constraintTop_toTopOf="@+id/item_tv_pay_date"

        />

    <TextView
        android:id="@+id/item_tv_pay_price"
        android:layout_width="74dp"
        android:layout_height="28dp"
        android:text=""
        android:textColor="#ff313133"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/item_tv_pay_date"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_tv_pay_date" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ccc"
        app:layout_constraintBottom_toBottomOf="parent" />
</android.support.constraint.ConstraintLayout>