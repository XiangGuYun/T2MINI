<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="406dp"
    android:layout_height="410dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="现金支付"
        android:textColor="#ff333333"
        android:textSize="26sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_used_price_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="42dp"
        android:text="应付："
        android:textColor="@color/color_999"
        android:textSize="22sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <TextView
        android:id="@+id/tv_used_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:text="¥80.00"
        android:textColor="@color/color_333"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_used_price_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_used_price_title" />


    <TextView
        android:id="@+id/tv_balance_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="实付："
        android:textColor="@color/color_999"
        android:textSize="22sp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_used_price_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_used_price_title" />

    <TextView
        android:id="@+id/tv_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¥100.00"
        android:textColor="@color/color_333"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_balance_title"
        app:layout_constraintRight_toRightOf="@+id/tv_used_price"
        app:layout_constraintTop_toTopOf="@+id/tv_balance_title" />

    <View
        android:id="@+id/view_dash_line"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/dash_line"
        app:layout_constraintLeft_toLeftOf="@+id/tv_balance_title"
        app:layout_constraintRight_toRightOf="@+id/tv_balance"
        app:layout_constraintTop_toBottomOf="@+id/tv_balance_title" />

    <TextView
        android:id="@+id/tv_small_change_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="找零："
        android:textColor="@color/color_999"
        android:textSize="22sp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_used_price_title"
        app:layout_constraintTop_toBottomOf="@+id/view_dash_line" />

    <TextView
        android:id="@+id/tv_small_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¥20.00"
        android:textColor="@color/small_change"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_small_change_title"
        app:layout_constraintRight_toRightOf="@+id/tv_used_price"
        app:layout_constraintTop_toTopOf="@+id/tv_small_change_title" />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#6C6C72"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>